{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "ES2020"
    ],
    "target": "es2020",
    "skipLibCheck": true,
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@app/configuration": [
        "libs/configuration/src"
      ],
      "@app/configuration/*": [
        "libs/configuration/src/*"
      ],
      "@app/logger": [
        "libs/logger/src"
      ],
      "@app/logger/*": [
        "libs/logger/src/*"
      ],
      "@app/mongo": [
        "libs/mongo/src"
      ],
      "@app/mongo/*": [
        "libs/mongo/src/*"
      ],
      "@app/pg": [
        "libs/pg/src"
      ],
      "@app/pg/*": [
        "libs/pg/src/*"
      ],
      "@app/resources": [
        "libs/resources/src"
      ],
      "@app/resources/*": [
        "libs/resources/src/*"
      ],
      "@app/s3": [
        "libs/s3/src"
      ],
      "@app/s3/*": [
        "libs/s3/src/*"
      ],
      "@app/rabbitmq": [
        "libs/rabbitmq/src"
      ],
      "@app/rabbitmq/*": [
        "libs/rabbitmq/src/*"
      ]
    }
  }
}