# Example Environment Variables for Pricing & Evaluation Services
# Copy this file to .env and adjust values as needed

# =============================================================================
# PRICING SERVICE CONFIGURATION
# =============================================================================

# Main Control: Enable pricing service
DMA_INDEX_ITEMS_PRICING=true
DMA_INDEX_ITEMS_PRICING_BUILD=true
DMA_INDEX_ITEMS_PRICING_LAB=true

# Granular Controls: Index professions from Blizzard API
DMA_PRICING_INDEX_PROFESSIONS=true

# Granular Controls: Build CSV data (SkillLine, SpellEffect, SpellReagents)
DMA_PRICING_BUILD_SKILL_LINE=true
DMA_PRICING_BUILD_SPELL_EFFECT=true
DMA_PRICING_BUILD_SPELL_REAGENTS=true

# Lab Methods: Reverse pricing from static data
DMA_PRICING_LAB_PROSPECTING=true
DMA_PRICING_LAB_MILLING=true
DMA_PRICING_LAB_DISENCHANTING=true

# =============================================================================
# VALUATIONS SERVICE CONFIGURATION
# =============================================================================

# Main Control: Enable valuations build
DMA_VALUATIONS_BUILD=true

# Stage Controls: Which stages to run
DMA_VALUATIONS_FROM_PRICING=true
DMA_VALUATIONS_FROM_AUCTIONS=true
DMA_VALUATIONS_FOR_PREMIUM=false
DMA_VALUATIONS_FOR_CURRENCY=true
DMA_VALUATIONS_BUILD_TAGS=true

# Auction Sub-stages: Granular control over auction-based asset classes
DMA_VALUATIONS_MARKET_ASSET_CLASS=true
DMA_VALUATIONS_COMMODITY_ASSET_CLASS=true
DMA_VALUATIONS_ITEM_ASSET_CLASS=true

# =============================================================================
# RECOMMENDED INITIAL SETUP SEQUENCE
# =============================================================================
# 1. First run: Enable all pricing and valuation services
# 2. Wait for completion (check logs)
# 3. Verify data in database:
#    - PricingEntity should have PRIMARY and REVERSE entries
#    - ItemsEntity should have assetClass arrays populated
#    - SkillLineEntity, SpellEffectEntity, SpellReagentsEntity should have data
# 4. Run evaluation service (via API or scheduled job)

# =============================================================================
# PRODUCTION RECOMMENDATIONS
# =============================================================================
# - Disable CSV builds if data hasn't changed (Redis caching handles this)
# - Keep lab pricing enabled (relatively fast, always fresh)
# - Enable valuation stages selectively based on needs
# - Monitor Redis for stage processing state
